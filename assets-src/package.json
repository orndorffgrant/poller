{
  "scripts": {
    "vendor-htmx": "curl https://unpkg.com/htmx.org@1.3.3/dist/htmx.min.js -o ../assets/htmx.js",
    "watch-develop": "nodemon --watch . -e css node_modules/.bin/postcss src/styles.css -o ../assets/styles.css",
    "develop": "postcss src/styles.css -o ../assets/styles.css",
    "watch-build": "NODE_ENV=production nodemon --watch . --watch ../templates -e js,mjs,json,css,html node_modules/.bin/postcss src/styles.css -o ../assets/styles.css",
    "build": "NODE_ENV=production postcss src/styles.css -o ../assets/styles.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.2"
  }
}
